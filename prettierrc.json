{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "YAML Schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "number",
            "description": "CI/CD configuration file version"
        },
        "runners": {
            "type": "object",
            "description": "Configuration for CI/CD runners",
            "properties": {
                "Test": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "properties": {
                                "config-id": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "config-id"
                            ]
                        }
                    }
                }
            }
        },
        "images": {
            "type": "object",
            "description": "Container images for jobs",
            "properties": {},
            "required": [
                "hub-image"
            ]
        },
        "jobs": {
            "type": "object",
            "description": "Individual CI/CD jobs",
            "properties": {},
            "required": [
                "catalyst",
                "approve",
                "zoho",
                "test"
            ]
        },
        "stages": {
            "type": "array",
            "description": "Sequences of jobs in the CI/CD pipeline",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "runner": {
                        "type": "string"
                    },
                    "jobs": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "name",
                    "jobs"
                ]
            }
        },
        "pipeline-runner": {
            "type": "string"
        }
    },
    "required": [
        "version",
        "runners",
        "images",
        "jobs",
        "stages"
    ]
}
